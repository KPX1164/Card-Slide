<% totalProduct = 3 %>
<% product = ['การท่องเที่ยว', 'งานออกแบบ', 'ของชำร่วย'] %>
<div class="sticky top-0 bg-white">
<section class="font-primary w-full VStack items-center ">
  <div class="HStack p-4 h-14 items-center w-full">
    <div class="HStack w-1/3 items-center justify-start">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
      </svg>
      
      <a class="p3" href="/jetlin04/product<%= current === 1 ? totalProduct : current - 1 %>?current=<%= current === 1 ? totalProduct : current - 1 %>">
        <%= current === 1 ? product[totalProduct - 1] : product[current - 2] %>
   </a>
    </div>
    <div class="HStack w-1/3 items-center justify-center">
      <p class="p3 font-bold"> <%= product[current - 1] %></p>

    </div>
    <div class="HStack w-1/3 items-center justify-end">
      <a class="p3" href="/jetlin04/product<%= current === totalProduct ? 1 : current + 1 %>?current=<%= current === totalProduct ? 1 : current + 1 %>">
        <%= current === totalProduct ? product[0] : product[current] %>
   </a>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
      </svg>
    </div>
  </div>
</section>
<div class="section-break"></div>
</div>