<div class="w-4/5 mt-10">
  <% let data = row.content.split(","); %> <% data.forEach(function(item, index)
  { %>
  <div class="HStack ">
    <div class="w-1/5 VStack items-center justify-center">
      <img src="images/timeline.png" alt="" class="max-w-full max-h-full" />
    </div>
    <div class="w-4/5 VStack items-center justify-center mt-5 mb-5 <%= row.movement === 'reveal' ? 'reveal ' : '' %>">
      <p class="p2 font-normal text-justify"><%= item %></p>
    </div>
  </div>
  <% }); %>
</div>
