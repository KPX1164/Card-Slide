<% // Function to parse content and return an object with url and description
function parseContent(content) {
  const commaIndex = content.indexOf(',');
  const url = content.substring(0, commaIndex);
  const description = content.substring(commaIndex + 1);
  return { url, description };
}

// Determine the content and parse it
const { url, description } = (typeof row.content === 'object' && 'text' in row.content && 'hyperlink' in row.content) ?
  parseContent(row.content.text) : parseContent(row.content);
%>
<div class="w-4/5 HStack mt-10 <%= row.movement === 'reveal' ? 'reveal ' : '' %> border-t-black border-b-black">

<a
  class=" flex items-center text-left  gap-3 h-12 w-full border-t border-b p-2"
  href="<%= url %>"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    class="w-6 h-6"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M12 9.75v6.75m0 0-3-3m3 3 3-3m-8.25 6a4.5 4.5 0 0 1-1.41-8.775 5.25 5.25 0 0 1 10.233-2.33 3 3 0 0 1 3.758 3.848A3.752 3.752 0 0 1 18 19.5H6.75Z"
    />
  </svg>

  <%= description %>
</a>
</div>